<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Tool.Example.Floating.ExampleFloatingView">

  <Grid ColumnDefinitions="1*" RowDefinitions="auto,1*">

    <StackPanel Grid.Column="0" Grid.Row="0" Orientation="Horizontal">
      <TextBlock Text="Hello World from Floating ToolWindow!" />
    </StackPanel>
    
    <StackPanel Grid.Column="0" Grid.Row="1" Orientation="Horizontal">
      <TextBlock Text="Message sent from Document: " />
      <TextBlock Text="{Binding Path=TestMessage}" />
    </StackPanel>
    
  </Grid>
</UserControl>
